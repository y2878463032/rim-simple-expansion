<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- 包装食物分类 -->
<ThingCategoryDef>
	<defName>EZR_PackedRawFood</defName>
	<label>包装食物</label>
	<parent>FoodRaw</parent>
</ThingCategoryDef>

<!-- 包装菜 -->
<ThingDef ParentName="PlantFoodRawBase">
    <defName>EZR_PackedVegetable</defName>
    <label>包装菜</label>
    <description>能够长时间存储的脱水蔬菜</description>
    <graphicData>
        <texPath>Items/PackedVegetable</texPath>
    </graphicData>
    <statBases>
        <MarketValue>0.2</MarketValue>
        <SellPriceFactor>12</SellPriceFactor>
        <Flammability>2</Flammability>
        <DeteriorationRate>0.2</DeteriorationRate>
        <FoodPoisonChance>0</FoodPoisonChance>
        <FoodPoisonChanceFixedHuman>0</FoodPoisonChanceFixedHuman>
        <Nutrition>0.05</Nutrition>
    </statBases>
    <stackLimit>100</stackLimit>
    <ingestible>
        <preferability>RawBad</preferability>
        <tasteThought>AteRawFood</tasteThought>
        <ingestEffect>EatVegetarian</ingestEffect>
        <ingestSound>RawVegetable_Eat</ingestSound>
        <foodType>Seed</foodType>
    </ingestible>
    <comps>
        <li Class="CompProperties_Rottable">
            <daysToRotStart>60</daysToRotStart>
            <rotDestroys>true</rotDestroys>
        </li>
    </comps>
    <thingCategories>
        <li>EZR_PackedRawFood</li>
    </thingCategories>
</ThingDef>

<!-- 包装菜配方 -->
<RecipeDef>
    <defName>EZR_MakePackedVegetable</defName>
    <label>制作包装菜</label>
    <description>将蔬菜、块茎或是谷物加工成干货，并包装起来。</description>
    <jobString>制作包装菜。</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workSkill>Crafting</workSkill>
    <displayPriority>1001</displayPriority>
    <workAmount>6</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <recipeUsers>
        <li>TableButcher</li>
    </recipeUsers>
    <ingredients>
        <li>
            <filter>
                <categories>
                    <li>PlantFoodRaw</li>
                </categories>
            </filter>
            <count>3.75</count>
        </li>
    </ingredients>
    <fixedIngredientFilter>
        <categories>
            <li>PlantFoodRaw</li>
        </categories>
    </fixedIngredientFilter>
    <products>
        <EZR_PackedVegetable>75</EZR_PackedVegetable>
    </products>
</RecipeDef>

<!-- 包装肉 -->
<ThingDef ParentName="OrganicProductBase">
    <defName>EZR_PackedMeat</defName>
    <label>包装肉</label>
    <description>能够长时间存储的脱水肉类</description>
    <graphicData>
        <texPath>Items/PackedMeat</texPath>
    </graphicData>
    <statBases>
        <MarketValue>0.25</MarketValue>
        <SellPriceFactor>12</SellPriceFactor>
        <Flammability>2</Flammability>
        <DeteriorationRate>0.2</DeteriorationRate>
        <FoodPoisonChance>0</FoodPoisonChance>
        <FoodPoisonChanceFixedHuman>0</FoodPoisonChanceFixedHuman>
        <Nutrition>0.05</Nutrition>
    </statBases>
    <stackLimit>100</stackLimit>
    <socialPropernessMatters>true</socialPropernessMatters>
    <allowedArchonexusCount>200</allowedArchonexusCount>
    <ingestible>
        <preferability>RawBad</preferability>
        <tasteThought>AteRawFood</tasteThought>
        <ingestEffect>EatMeat</ingestEffect>
        <ingestSound>RawMeat_Eat</ingestSound>
        <foodType>Meat</foodType>
    </ingestible>
    <comps>
        <li Class="CompProperties_Rottable">
            <daysToRotStart>60</daysToRotStart>
            <rotDestroys>true</rotDestroys>
        </li>
    </comps>
    <thingCategories>
        <li>EZR_PackedRawFood</li>
    </thingCategories>
</ThingDef>

<!-- 包装肉配方 -->
<RecipeDef>
    <defName>EZR_MakePackedMeat</defName>
    <label>制作包装肉</label>
    <description>将鲜肉、内脏或是骨髓加工成干货，并包装起来。</description>
    <jobString>制作包装肉。</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workSkill>Crafting</workSkill>
    <displayPriority>1002</displayPriority>
    <workAmount>6</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <recipeUsers>
        <li>TableButcher</li>
    </recipeUsers>
    <ingredients>
        <li>
            <filter>
                <categories>
                    <li>MeatRaw</li>
                    <li>AnimalProductRaw</li>
                </categories>
            </filter>
            <count>3.75</count>
        </li>
    </ingredients>
    <fixedIngredientFilter>
        <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
        </categories>
    </fixedIngredientFilter>
    <products>
        <EZR_PackedMeat>75</EZR_PackedMeat>
    </products>
</RecipeDef>

</Defs>